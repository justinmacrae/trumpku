<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.justinmacrae.twitter.Start"
    android:background="@color/colorPrimary">

    <TextView android:text="Trumpku" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/tw__blue_pressed_light"
        android:textColor="@color/tw__composer_white" />

    <TextView
        android:text="Remember a Haiku consists of 3 lines."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView2"
        android:textColor="@color/tw__composer_white" />

    <TextView
        android:text="5 syllable - 7 syllable - 5 syllable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:textColor="@color/tw__composer_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help"
        android:hint="Watch the magic happen! Try waiting 6 seconds before forming haiku, text file takes time to load."
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:textColor="@color/tw__composer_white"
        android:textColorHint="@color/tw__composer_white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Haiku"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/tw__composer_white"
        android:background="@color/tw__composer_red" />

    <Button
        android:text="View the Tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/tw__composer_white"
        android:background="@color/tw__composer_red"
        android:visibility="invisible" />

    <TextView
        android:text="Line One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/lineone"
        android:textSize="24sp"
        android:textColor="@color/tw__composer_white" />

    <TextView
        android:text="Line Two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/linetwo"
        android:textSize="24sp"
        android:textColor="@color/tw__composer_white" />

    <TextView
        android:text="Line Three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linetwo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/linethree"
        android:textSize="24sp"
        android:textColor="@color/tw__composer_white" />

</RelativeLayout>
